{
  "version": 2,
  "name": "smartimport-5-0",
  "rewrites": [
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/favicon.svg", "destination": "/favicon.svg" },
    { "source": "/icon-192x192.png", "destination": "/icon-192x192.png" },
    { "source": "/icon-512x512.png", "destination": "/icon-512x512.png" },
    { "source": "/apple-touch-icon.png", "destination": "/apple-touch-icon.png" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/dashboard|/simulator|/history|/reports|/integrations|/settings|/help",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "env": {
    "VITE_APP_NAME": "SmartImport 5.0",
    "VITE_APP_VERSION": "5.0.0"
  }
} 